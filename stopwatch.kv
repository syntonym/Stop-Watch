#:kivy 1.0.9


<StopWatch>:
    timelbl: timeLabel

    Label:
    	id: timeLabel
        font_size: 70  
        center_y: root.height /2
        center_x: root.width /2 
        top: root.top - 50
        text: str(root.timelbl)

    Button:
    	id: StartButton 
    	size: 100,50
    	text: "Start"
    	center_y: (root.height /2) - 90
        center_x: (root.width /2 ) - 100
        on_press: root.start_time()
       

    Button:
    	id: StopButton 
    	size: 100,50
    	text: "Stop"
    	center_y: (root.height /2) - 90
        center_x: (root.width /2 ) + 100
        on_press: root.stopTime()

    Button:
    	id: ResetButton 
    	size: 100,50
    	text: "reset"
    	center_y: (root.height /2) - 90
        center_x: (root.width /2 ) 
        on_press: root.resetTime()
